<%- include('partials/head-html')%>
  <body>
    <%- include('partials/nav-bar')%>  
    <div id="side-bar">
        <table>
            <thead>
               
            </thead>
            <tbody>
                <%deletedFlights.forEach(flight=>{%>
                    <%console.log(flight)%>
                    <tr>
                        <td><%=flight.flightNo%></td>
                        <td><%=flight.airline%></td>
                    </tr>
                <%})%>
                
            </tbody>
        </table>
        <!-- <form action="/flights" method="POST">
          
            <button type="submit">Restore</button>
        </form> -->
        
    </div>
    <h1 class="centered-header"><%= title %></h1>
    <div id="body-container">
        
        <table>
            <thead>
                <tr>
                    <th>Airline</th>
                    <th>Flight No.</th>
                    <th>Leaves</th>
                    <th>Airport</th>
                    
                </tr>
            </thead>
            <tbody>
                <%flights.forEach(flight=>{%>
                    <tr>
                        <%if(flight.airline==='American'){%>
                            <td id="american"></td>
                        <%}else if(flight.airline==="United"){%>
                            <td id="united"></td>
                        
                        <%}else{%>
                            <td id="southwest"></td>

                        <%}%>
                        
                        <td><a href="/flights/<%=flight._id%>"><%=flight.flightNo%></a></td>
                        <%if(flight.departs < Date.now()){%>
                            <td id="time-passed"><%=flight.departs.toDateString()%>&nbsp; at &nbsp;<%=flight.departs.toLocaleTimeString()%></td>
                            <%}else{%>
                                <td id="time"><%=flight.departs.toDateString()%>&nbsp; at &nbsp;<%=flight.departs.toLocaleTimeString()%></td>    
                                
                                <%}%>
                                <td><%=flight.airport%></td>   
                                <td>
                                        
                                    <a href="/flights/<%=flight._id%>"><button class="details-button">Details</button></a>
                                    <a href="/flights/<%=flight._id%>/edit"><button class="edit-button">Edit</button></a>
                                    <form action="/flights/<%=flight._id%>?_method=DELETE" method="POST">
                                        <button class="delete-button">Delete</button>
                                    </form>
                                </td>
                                 
                            </tr>
                            
                            <%})%>
                           
                        </tbody>
                    </table>
                    <a href="flights/new"><button type="submit" class="submit">Add Flight</button></a>
                    
        </div>
       
  </body>
</html>
